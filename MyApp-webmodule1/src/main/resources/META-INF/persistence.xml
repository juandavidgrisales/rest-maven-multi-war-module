<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="payu-pu" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>com.payu.business.entities.RolEntity</class>
		<class>com.payu.business.entities.UserEntity</class>

		<properties>

			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="postgres1" />
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<!-- JPA -->
<!-- 			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" /> -->
			
			<!-- Update Phisical BD -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<!-- <property name="hibernate.connection.autocommit" value="false" /> -->

			<!-- Conection UP from BD -->
			<property name="dbcp.validationQuery" value="select 1 from dual" />

			<!-- ehCACHE -->
			<property name="hibernate.cache.region.factory_class"
				value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.connection.release_mode" value="auto" />

			<!-- C3PO -->
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider" />
			<property name="hibernate.c3p0.min_size" value="3" />
			<property name="hibernate.c3p0.max_size" value="200" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.acquire_increment" value="5" />
			<property name="hibernate.c3p0.idle_test_period" value="180" />

		</properties>
	</persistence-unit>
</persistence>
